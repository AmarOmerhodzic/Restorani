@model IEnumerable<Restorani.Models.Jelo>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col pt-6">
            <h2 class="text-primary">Pregled jela</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Jelo" asp-action="Create" class="btn btn-outline-primary">Dodaj jelo</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Naziv
                    </th>
                    <th>
                        Cijena
                    </th>
                    <th>
                        Dostupno u:
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var jelo in Model)
                {
                    <tr>
                        <td width="25%">@jelo.Naziv</td>

                        <td width="50%">@jelo.Cijena</td>

                        <td width="25%">@jelo.Restorani.Naziv</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nema jela u ponudi</p>
    }

</div>
