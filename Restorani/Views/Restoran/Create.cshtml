@model Restorani.Models.Restoran


<form method="post" asp-action="Create">

    <div class=" " border р-3">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Dodaj restoran</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Naziv"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Adresa"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Telefon"></label>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Naziv" class="form-control" />
                        <span asp-validation-for="Naziv" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Adresa" class="form-control" />
                        <span asp-validation-for="Adresa" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Telefon" class="form-control" />
                        <span asp-validation-for="Telefon" class="text-danger"></span>
                    </div>

                </div>
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-info w-75" value="Create" />
            </div>
            <div class="col-6 ">
                <a class=" btn btn w-75" asp-area="" asp-controller="Restoran" asp-action="Index">Go back</a>

            </div>
        </div>
    </div>



</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

