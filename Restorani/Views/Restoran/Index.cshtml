
@model IEnumerable<Restorani.Models.Restoran>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary"> Pregled restorana</h2>
		</div>
		<div class="col-6 text-right">
			<a asp-controller="Restoran" asp-action="Create" class="btn btn-outline-primary">Dodaj restoran</a>
		</div>
		<br />
	</div>
	<br />
	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th>
						Naziv
					</th>
					<th>
						Adresa
					</th>
					<th>
						Telefon
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var restoran in Model)
				{
					<tr>
						<td width="40%">@restoran.Naziv</td>
						<td width="40%">@restoran.Adresa</td>
						<td width="40%">@restoran.Telefon</td>

					</tr>
				}
			</tbody>

			</table>
	}
	else
	{
		<p>No restaurants created</p>
	}
</div>